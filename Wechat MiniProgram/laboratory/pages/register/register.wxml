<view class="container">

  <view class="login-icon">
    <image class="login-img" src="http://192.168.43.51:900/images/kk.jpg"></image>
  </view>

  <view class="login-from">

    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="../../images/login/name.png"></image>
      <label class="loginLab">账号</label>
      <input class="inputText" placeholder="请输入账号" bindinput="accountInput" />
    </view>

    <view class="line">
    </view>

    <!--密码-->
    <view class="inputView">
      <image class="keyImage" src="../../images/login/key.png"></image>
      <label class="loginLab">密码</label>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
    </view>
    <view class="line">
    </view>
    <view class="inputView">
      <image class="keyImage" src="../../images/login/key.png"></image>
      <label class="loginLab">密码</label>
      <input class="inputText" password="true" placeholder="再次输入密码" bindinput="passwordInputConfirm" />
    </view>
    <view class="line">
    </view>

    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="onregisterClick">继续录入脸部信息</button>
    </view>
  </view>
</view>