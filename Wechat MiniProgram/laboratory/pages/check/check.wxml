<view class="container">

  <view class="login-icon">
    <image class="login-img" src="http://192.168.43.51:900/images/ll.jpg"></image>
  </view>
  <view class="login-from">

    <!--密码-->
    <view class="inputView">
      <image class="keyImage" src="../../images/login/key.png"></image>
      <label class="loginLab">密码</label>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
    </view>

    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">确认</button>
    </view>

  </view>
</view>